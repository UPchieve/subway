{
  "compilerOptions": {
      "esModuleInterop": true,
      "allowUmdGlobalAccess": true,
      "outDir": "build",
      "resolveJsonModule": true,
      "allowJs": true,
      "skipLibCheck": true,
      "target":"es2019",
      "moduleResolution": "node",
      "module": "commonjs",
      "lib":[
        "es2020", "dom"
      ]
  },
  "exclude": [
    "server/dbutils",
    "server/tests",
    "node_modules/",
    "build/",
    "src/",
    "tests/",
    "dist/",
    "public",
    "./*.js"
  ],
  "ts-node": {
    "files": true
  }
}
