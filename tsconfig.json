{
  "compilerOptions": {
      "esModuleInterop": true,
      "allowUmdGlobalAccess": true,
      "outDir": "build",
      "resolveJsonModule": true,
      "allowJs": true,
      "skipLibCheck": true,
      "target":"es2019",
      "moduleResolution": "node",
      "module": "commonjs",
      "lib":[
        "es2019", "dom"
      ]
  },
  "exclude": [
    "dbutils/",
    "tests/",
    "node_modules/",
    "build/"
  ]
}
