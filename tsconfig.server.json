{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "allowUmdGlobalAccess": true,
    "outDir": "build",
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "target": "es2024",
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "lib": ["ES2024"]
  },
  "exclude": [
    "database/",
    "server/dbutils",
    "node_modules/",
    "build/",
    "src/",
    "tests/",
    "dist/",
    "public/",
    "./*.js",
    "./*.json",
    "bin/",
    ".*/",
    "server/tests/"
  ],
  "ts-node": {
    "files": true
  }
}
